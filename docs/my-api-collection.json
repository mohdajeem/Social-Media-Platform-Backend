{
  "info": {
    "name": "Social Media Backend API",
    "description": "Full API collection for authentication, posts, comments, likes, and follows.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"full_name\": \"Test User\"\n}"
            },
            "url": { "raw": "{{base_url}}/api/auth/register", "host": ["{{base_url}}"], "path": ["api", "auth", "register"] }
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"password123\"\n}"
            },
            "url": { "raw": "{{base_url}}/api/auth/login", "host": ["{{base_url}}"], "path": ["api", "auth", "login"] }
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{base_url}}/api/auth/profile", "host": ["{{base_url}}"], "path": ["api", "auth", "profile"] }
          }
        }
      ]
    },
    {
      "name": "Users & Follows",
      "item": [
        {
          "name": "Follow User",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }, { "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"user_id\": 2\n}" },
            "url": { "raw": "{{base_url}}/api/users/follow", "host": ["{{base_url}}"], "path": ["api", "users", "follow"] }
          }
        },
        {
          "name": "Unfollow User",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }, { "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"user_id\": 2\n}" },
            "url": { "raw": "{{base_url}}/api/users/unfollow", "host": ["{{base_url}}"], "path": ["api", "users", "unfollow"] }
          }
        },
        {
          "name": "Get Following",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{base_url}}/api/users/following", "host": ["{{base_url}}"], "path": ["api", "users", "following"] }
          }
        },
        {
          "name": "Get Followers",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{base_url}}/api/users/followers", "host": ["{{base_url}}"], "path": ["api", "users", "followers"] }
          }
        },
        {
          "name": "Get Follow Stats",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{base_url}}/api/users/stats", "host": ["{{base_url}}"], "path": ["api", "users", "stats"] }
          }
        },
        {
          "name": "Search Users",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }, { "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"search\": \"test\",\n  \"limit\": 10,\n  \"offset\": 0\n}" },
            "url": { "raw": "{{base_url}}/api/users/search", "host": ["{{base_url}}"], "path": ["api", "users", "search"] }
          }
        }
      ]
    },
    {
      "name": "Posts",
      "item": [
        {
          "name": "Create Post",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{token}}" }],
            "body": { "mode": "raw", "raw": "{\n  \"content\": \"This is my new post!\",\n  \"media_url\": \"https://example.com/image.jpg\",\n  \"comments_enabled\": true\n}" },
            "url": { "raw": "{{base_url}}/api/posts", "host": ["{{base_url}}"], "path": ["api", "posts"] }
          }
        },
        {
          "name": "Get My Posts",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{base_url}}/api/posts/my?page=1&limit=20", "host": ["{{base_url}}"], "path": ["api", "posts", "my"], "query": [{ "key": "page", "value": "1" }, { "key": "limit", "value": "20" }] }
          }
        },
        {
          "name": "Get Post by ID",
          "request": {
            "method": "GET",
            "url": { "raw": "{{base_url}}/api/posts/1", "host": ["{{base_url}}"], "path": ["api", "posts", "1"] }
          }
        },
        {
          "name": "Get Posts by User",
          "request": {
            "method": "GET",
            "url": { "raw": "{{base_url}}/api/posts/user/1?page=1&limit=20", "host": ["{{base_url}}"], "path": ["api", "posts", "user", "1"], "query": [{ "key": "page", "value": "1" }, { "key": "limit", "value": "20" }] }
          }
        },
        {
          "name": "Get Feed",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{base_url}}/api/posts/feed?page=1&limit=20", "host": ["{{base_url}}"], "path": ["api", "posts", "feed"], "query": [{ "key": "page", "value": "1" }, { "key": "limit", "value": "20" }] }
          }
        },
        {
          "name": "Update Post",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }, { "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"content\": \"Updated post content\",\n  \"media_url\": \"https://example.com/updated.jpg\",\n  \"comments_enabled\": false\n}" },
            "url": { "raw": "{{base_url}}/api/posts/1", "host": ["{{base_url}}"], "path": ["api", "posts", "1"] }
          }
        },
        {
          "name": "Delete Post",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{base_url}}/api/posts/1", "host": ["{{base_url}}"], "path": ["api", "posts", "1"] }
          }
        },
        {
          "name": "Search Posts",
          "request": {
            "method": "GET",
            "url": { "raw": "{{base_url}}/api/posts/search?search=test&page=1&limit=10", "host": ["{{base_url}}"], "path": ["api", "posts", "search"], "query": [{ "key": "search", "value": "test" }, { "key": "page", "value": "1" }, { "key": "limit", "value": "10" }] }
          }
        }
      ]
    },
    {
      "name": "Comments",
      "item": [
        {
          "name": "Create Comment",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }, { "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"postId\": 1,\n  \"content\": \"Nice post!\"\n}" },
            "url": { "raw": "{{base_url}}/api/comments", "host": ["{{base_url}}"], "path": ["api", "comments"] }
          }
        },
        {
          "name": "Update Comment",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }, { "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"content\": \"Updated comment!\"\n}" },
            "url": { "raw": "{{base_url}}/api/comments/1", "host": ["{{base_url}}"], "path": ["api", "comments", "1"] }
          }
        },
        {
          "name": "Delete Comment",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{base_url}}/api/comments/1", "host": ["{{base_url}}"], "path": ["api", "comments", "1"] }
          }
        },
        {
          "name": "Get Comments for Post",
          "request": {
            "method": "GET",
            "url": { "raw": "{{base_url}}/api/comments/post/1?limit=10&offset=0", "host": ["{{base_url}}"], "path": ["api", "comments", "post", "1"], "query": [{ "key": "limit", "value": "10" }, { "key": "offset", "value": "0" }] }
          }
        }
      ]
    },
    {
      "name": "Likes",
      "item": [
        {
          "name": "Like Post",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }, { "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"postId\": 1\n}" },
            "url": { "raw": "{{base_url}}/api/likes", "host": ["{{base_url}}"], "path": ["api", "likes"] }
          }
        },
        {
          "name": "Unlike Post",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }, { "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"postId\": 1\n}" },
            "url": { "raw": "{{base_url}}/api/likes", "host": ["{{base_url}}"], "path": ["api", "likes"] }
          }
        },
        {
          "name": "Get Likes for Post",
          "request": {
            "method": "GET",
            "url": { "raw": "{{base_url}}/api/likes/post/1", "host": ["{{base_url}}"], "path": ["api", "likes", "post", "1"] }
          }
        },
        {
          "name": "Get Posts Liked by User",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{base_url}}/api/likes/user", "host": ["{{base_url}}"], "path": ["api", "likes", "user"] }
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "base_url", "value": "http://localhost:5000" },
    { "key": "token", "value": "your_jwt_token_here" }
  ]
}